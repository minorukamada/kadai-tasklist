<div class="row">
  <div class="col-6">
    <%= form_with(model: task, local: true) do |f| %>
      <% if task.errors.any? %>
        <div id="error_explanation" class="alert alert-warning">
          <ul>
            <% task.errors.full_messages.each do |tsk| %>
              <li><%= tsk %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      
      
      
        <%= f.label :status, 'ステータス' %>
        <%= f.select :status, [["not Ready", "not Ready"], ["Ready", "Ready"], ["Doing", "Doing"], ["Done", "Done"]], :prompt => "選択してください" %>
      
      
      <div class="form-group">
        <%= f.label :content, 'タスク' %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>
      
      <%= f.submit '作成', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>